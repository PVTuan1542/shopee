<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D8D7D7">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolBar_shopeeFeed"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/toolBar_shopeeFeed"
        android:id="@+id/recyclerView_dsmenu"
        android:background="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"/>
   <ScrollView
       android:layout_below="@id/recyclerView_dsmenu"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#fff">
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyclerView_posts"
           android:background="#fff"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           />
   </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_navigation"
        app:itemBackground="@color/footer"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_footer"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="labeled"
        />

</RelativeLayout>